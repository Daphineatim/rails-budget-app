
<section class="text-center vh-100">
    <div class="header d-flex align-items-center justify-content-between px-4">
    <div>
        <%= link_to image_tag("https://img.icons8.com/ultraviolet/344/long-arrow-left.png"), root_path, class: "back_btn" %>
    </div>
        <h4 class="text-white">Categories</h4>
        <% if user_signed_in? %> 
            <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn main-color" %>
        <% end %>
    </div>
   

    <% if flash.notice %>
        <p class="notice"><%= notice %></p>
    <% end %>

    <div class="p-container">
        <% if @categories.any?%>
            <% @categories.each do |category| %>
                <%= render category %>
            <% end %>
        <% else %>
            <p class="p-2 m-2 h3">There is no category added!!!</p>
        <% end %>            
    </div>

    <div class="footer fixed-bottom py-4 footer-bttn">        
        <%= link_to "Add a category", new_category_path, class: "text-white" %>
    </div>
</section>
